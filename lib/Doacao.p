FUNCTION pedidoEDoacao RETURNS LOGICAL
    (INPUT pNomeAbrev   AS CHAR,
     INPUT pNrPedcli    AS CHAR
     )
    :
    
    FOR EACH estabelec:
        FOR FIRST web-ped-doacao NO-LOCK WHERE
                  web-ped-doacao.cod-estabel = estabelec.cod-estabel
              AND web-ped-doacao.nome-abrev  = pNomeAbrev
              AND web-ped-doacao.nr-pedcli   = pNrPedcli:
            RETURN TRUE.
        END.

    END.

    
    RETURN FALSE.





END FUNCTION.

